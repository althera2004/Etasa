<Window x:Class="EtasaDesktop.Distribution.Orders.EditFiltersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtasaDesktop.Distribution.Orders"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Filtros" Height="450" Width="800">
    <Border BorderThickness="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="0" Name="PanelFilters"></StackPanel>
            </ScrollViewer>
            <WrapPanel Grid.Row="1" Orientation="Horizontal">
                <Button HorizontalAlignment="Right" Name="FilterWindowAccept" Click="FilterWindowAccept_Click" >Aceptar</Button>
                <Button HorizontalAlignment="Right" Name="FilterWindowCancel" Click="FilterWindowCancel_Click">Cancelar</Button>
            </WrapPanel>

        </Grid>
        
    </Border>
</Window>
